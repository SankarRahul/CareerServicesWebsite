@model RecruiterEditViewModel

@{
    ViewData["Title"] = "Edit Recruiter";
}

<h1>Register a New User</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRecruiterProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            @if(User.IsInRole("Recruiter"))
            {
                <dt>Company:</dt>
                <dd>@Model.CompanyName</dd>
            }
            @if (User.IsInRole("CSO"))
            {
                <div class="form-group">
                    <label asp-for="CompanyID" class="control-label"></label>
                    @Html.DropDownListFor(model => model.CompanyID, (SelectList)ViewBag.AllCompanies, new { @class = "form-control" })
                </div>
                <br />
                <div class="form-group">
                <label asp-for="Deactivate" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="Deactivate" value="@false" checked="checked" /> Active<br />
                <input type="radio" class="radio" asp-for="Deactivate" value="@true" /> Inactive<br />
                 </div>
                 <br/>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>
