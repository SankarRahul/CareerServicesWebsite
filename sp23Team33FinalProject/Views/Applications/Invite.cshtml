@model sp23Team33FinalProject.Models.Application

@{
    ViewData["Title"] = "Invite";
}

<h1>Invite Students to Interview</h1>
<br />
<h4>Add students that didn't apply to your company's positions to be interviewed</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Invite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationID" />
            <input type="hidden" asp-for="Position.PositionID" />
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                @Html.DropDownListFor(model => model.Student, (SelectList)ViewBag.AllStudents, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>