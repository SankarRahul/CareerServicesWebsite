@model RecruiterIndexViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Company Name:</dt>
        <dd>@Model.CompanyName</dd>

        <dt>Password:</dt>
        <dd>
            [@Html.ActionLink("Change your password", "ChangePassword")]
        </dd>
    </dl>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
    {
        <a asp-action="EditProfile" asp-controller="Account" class="btn btn-info">Edit Profile</a>
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("Recruiter"))
    {
        <a asp-action="EditRecruiterProfile" asp-controller="Account" class="btn btn-info">Edit Profile</a>
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("CSO"))
    {
        <a asp-action="EditCSOProfile" asp-controller="Account" class="btn btn-info">Edit Profile</a>
    }
</div>